<odoo>

    <record model="ir.ui.view" id="res_config_settings_view_form_repair">
        <field name="name">res.config.settings.form (in repair_default_terms_conditions)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_repair_config.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='configure_repair']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="use_repair_line_default_location"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Default Location" for="use_repair_line_default_location"/>
                        <div class="text-muted">
                            Default Scrap and Production Location
                        </div>
                        <div class="content-group" attrs="{'invisible': [('use_repair_line_default_location', '=', False)]}">
                            <div class="row mt16">
                                <label for="production_location_id" class="col-lg-3 o_light_label"/>
                                <field name="production_location_id"/>
                            </div>
                            <div class="row mt16">
                                <label for="scrap_location_id" class="col-lg-3 o_light_label"/>
                                <field name="scrap_location_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>


</odoo>
